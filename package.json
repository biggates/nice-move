{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Frontend develop helper for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/nice-move/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/nice-move/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/nice-move/nice-move/issues"
  },
  "scripts": {
    "inspect": "nodemon",
    "lint": "nice-move lint",
    "prepare": "git config core.hooksPath .githooks",
    "test": "ava --fail-fast"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "devDependencies": {
    "ava": "^3.15.0",
    "commitlint": "^15.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-ava": "^13.1.0",
    "garou": "^0.2.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.0",
    "stylelint": "^14.1.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.13.0"
  },
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "internal-regex": "^@nice-move/inspector$",
    "jsx-runtime": false
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "inspect",
    "ext": "js,cjs,mjs,json",
    "watch": [
      "./packages/**/*",
      "./tools/**/*"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}