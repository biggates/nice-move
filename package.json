{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Frontend develop helper for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/nice-move/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/nice-move/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/nice-move/nice-move/issues"
  },
  "scripts": {
    "inspect": "nodemon",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc --noEmit",
    "prepare": "git config core.hooksPath .githooks",
    "test": "ava --fail-fast -c 1"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "dependencies": {
    "svgo": "^2.8.0",
    "svgo-config": "^0.4.1"
  },
  "devDependencies": {
    "ava": "^4.3.0",
    "best-shot": "^0.2.8",
    "eslint": "^8.18.0",
    "eslint-plugin-ava": "^13.2.0",
    "execa": "^6.1.0",
    "garou": "^0.4.14",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "^14.17.0 || ^16.13.0 || >=18.0.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "bundle": [
      "packages/init/**",
      "packages/lint/**",
      "packages/cli/**"
    ],
    "internal-regex": "^@nice-move/inspector$"
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "inspect",
    "ext": "js,cjs,mjs,json",
    "watch": [
      "./packages/**/*",
      "./tools/**/*"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}