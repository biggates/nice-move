{
  "private": true,
  "name": "nice-move",
  "version": "0.0.0",
  "description": "Frontend develop helper for personal use",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/nice-move/nice-move",
  "repository": {
    "type": "git",
    "url": "https://github.com/nice-move/nice-move.git"
  },
  "bugs": {
    "url": "https://github.com/nice-move/nice-move/issues"
  },
  "scripts": {
    "inspect": "nodemon",
    "lint:staged": "nice-move lint staged",
    "prepare": "git config core.hooksPath .githooks",
    "test": "ava --fail-fast -c 1"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "dependencies": {
    "svgo": "^2.8.0",
    "svgo-config": "^0.4.0",
    "vue": "^3.2.31"
  },
  "devDependencies": {
    "@best-shot/cli": "^0.12.4",
    "@best-shot/core": "^0.6.6",
    "ava": "^4.1.0",
    "eslint": "^8.11.0",
    "eslint-plugin-ava": "^13.2.0",
    "garou": "^0.4.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "stylelint": "^14.6.0",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.13.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base",
    "rules": {
      "import/no-extraneous-dependencies": 0
    }
  },
  "nice-move": {
    "internal-regex": "^@nice-move/inspector$"
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "inspect",
    "ext": "js,cjs,mjs,json",
    "watch": [
      "./packages/**/*",
      "./tools/**/*"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}